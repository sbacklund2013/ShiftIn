@model IEnumerable<ShiftIn.Models.ForumPost>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    
    <h1><img class="m-0 p-0" height="60" src="/Images/ShiftinLogo.svg" alt="logo">Welcome to the Shiftin Forum</h1>

<div class="form-group has-search">
    <form asp-action="Search">
        <div class="input-group">
            <input name="searchtext" type="text" class="form-control" placeholder="Search the Forums">
            <div class="input-group-append">
                <button class="btn btn-secondary" type="submit">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                        <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
                    </svg>
                </button>
            </div>
        </div>
    </form>

</div>
<p>
    <a class="btn btn-success" asp-action="Create">Create a New Thread</a>
</p>

@foreach (var item in Model)
{
    @await Html.PartialAsync("_ForumPost", item)


}
