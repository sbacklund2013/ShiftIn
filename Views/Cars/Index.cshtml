@model IEnumerable<ShiftIn.Models.Car>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Your Cars</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Year Make Model
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @(item.Year + " " + item.Make + " " + item.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-controller="CarImages" asp-action="AddCarImages" asp-route-id="@item.Id">Add Images</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        <tr>
            <div class="profile mr-3">
                @if (item.CarImages != null)
                {
                    @foreach (var image in item.CarImages)
                    {
                        <img src="@(image.Path)" alt="..." width="130" class="rounded mb-2 img-thumbnail">
                    }
                }
            </div>
        </tr>
}
    </tbody>
</table>
